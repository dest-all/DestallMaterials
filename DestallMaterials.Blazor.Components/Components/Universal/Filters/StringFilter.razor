@using DestallMaterials.Blazor.Components.Universal.Inputs
@using DestallMaterials.WheelProtection.Extensions.String

@inherits PropertyFilterBase<string>

<StringInput OnValueSet="v => OnTextInput(v)" InputLabel="@InputLabel" Value="@Value">
    <Flag Value="Filters" OnValueSet="v => { Filters = v; OnFilterChange(FilterValue); }" />
</StringInput>

@code {
    void OnTextInput(string value)
    {
        Filters = value.HasContent();
        Value = value;
        OnFilterChange(FilterValue);
    }
}