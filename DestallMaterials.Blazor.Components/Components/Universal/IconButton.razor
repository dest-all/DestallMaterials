@inherits Button

<button @o:has(:hover)overclick="async e => await onClickAsync()" style="@style" disabled="@(Disabled)">
    <i class="material-icons" style="color:grey; font-size:40px">@MaterialIconName</i>
</button>


@code {
    [Parameter]
    public string MaterialIconName { get; set; }

    [Parameter]
    public Func<Task> OnClickAsync { get; set; }
    
    protected virtual string style => "padding: 3px";

}
