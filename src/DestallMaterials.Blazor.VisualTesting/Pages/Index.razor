@page "/"
@using DestallMaterials.Blazor.Auxiliary;
@using DestallMaterials.Blazor.Components.Universal.Dropdowns
@using DestallMaterials.Blazor.Components.Universal;
@using DestallMaterials.WheelProtection.Executions;

<PageTitle>Index</PageTitle>

@{
    var dynamicButton = new ButtonConfiguration
    {
        ShowStateFor = TimeSpan.FromSeconds(5),
        Callback = async () => throw new ExplainedError(),
        Hidden = false,
        Disabled = false,
        ActionName = "Click me"
    };
}

<DynamicButton Button="dynamicButton" />

@code {
    class ExplainedError : Exception, IExplained
    {
        public string Explanation => "Test error popover";
    }
}