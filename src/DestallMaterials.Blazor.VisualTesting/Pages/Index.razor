@page "/"
@using DestallMaterials.Blazor.Auxiliary;
@using DestallMaterials.Blazor.Components.Universal.Dropdowns
@using DestallMaterials.Blazor.Components.Universal;
@using DestallMaterials.Blazor.Components.Universal.Inputs
@using DestallMaterials.WheelProtection.Executions;

<PageTitle>Index</PageTitle>

<FlexibleDatePicker OnValueChanged="DateChanged" Clearable="true" Value="Value" />

@code {
    void DateChanged(DateTime? dateTime)
    {
        if (dateTime is null)
        {
            Console.WriteLine("No value");
        }
        else
        {
            Console.WriteLine(dateTime.Value);
        }
        Value = dateTime;
    }

    DateTime? Value;
}